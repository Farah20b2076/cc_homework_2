import java.util.Scanner;

public class Hw2
{
	
	public static void main(String[] args){
		
		Scanner s = new Scanner(System.in);                         // Relevant comments for certain lines
		
		System.out.println("Enter number: ");    
		int num = s.nextInt();                                      // Input number would be assigned to num variable with type int
		
		float remainder= num%2;                                     // To see if input is divisible by 2, remainder variable is in float type
		
		if (remainder == 0) {                                       // formatting clean, if else function has their own block
			System.out.println("The number is divisible by 2");       // away from irrelevant blocks. Other blocks/lines
		} else {                                                    // are only close to those that are closely relevant to them
			System.out.println("The number is NOT divisible by 2");
		}
		
	}
}
